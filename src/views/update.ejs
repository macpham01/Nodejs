<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update</title></head
  ><link rel="stylesheet" href="/css/test.css" />
  <body>
    <form action="updateData/:<%= dataUser[0].id %>" method="post">
      <div>
        <label for="firstName">First Name</label>
        <input
          type="text"
          value="<%= dataUser[0].firstName %>"
          name="firstName"
        />
      </div>
      <div>
        <label for="lastName">Last Name</label>
        <input
          type="text"
          name="lastName"
          value="<%= dataUser[0].lastName %>"
        />
      </div>
      <div>
        <label for="email">Email</label>
        <input type="email" name="email" value="<%= dataUser[0].email %>" />
      </div>
      <div>
        <label for="address">Address</label>
        <input type="text" name="address" value="<%= dataUser[0].address %>" />
      </div>
      <button type="submit">Submit</button>
      <input hidden type="text" name="userID" value="<%= dataUser[0].id %>" />
    </form>
  </body>
</html>
